<!-- <asset src="www/PathToFile.js" target="PathToFile.js" />     -->

    <js-module src="www/JJsftp.js" name="JJsftp">
        <clobbers target="JJsftp" />
    </js-module>


    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="JJsftp" >
                <param name="android-package" value="org.jjdltc.cordova.plugin.sftp.JJsftp"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

<!-- <resource-file src="FooPluginStrings.xml" target="res/values/FooPluginStrings.xml" /> -->

        <lib-file src="libs/jsch-0-1-51.jar" arch="device" />

        <source-file src="src/android/JJsftp.java" target-dir="src/org/jjdltc/cordova/plugin/sftp" />
        <source-file src="src/android/asyncSFTPAction.java" target-dir="src/org/jjdltc/cordova/plugin/sftp" />
        <source-file src="src/android/progressMonitor.java" target-dir="src/org/jjdltc/cordova/plugin/sftp" />
    </platform>

